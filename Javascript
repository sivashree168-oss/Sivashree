    <script>
        // Example 1: Variables and Data Types
        function showDataTypes() {
            let name = "John";
            let age = 30;
            let isStudent = false;
            let hobbies = ["reading", "gaming", "coding"];
            let address = { city: "New York", country: "USA" };
            
            let output = `
                Name: ${name} <br>
                Age: ${age} <br>
                Is Student: ${isStudent} <br>
                Hobbies: ${hobbies.join(", ")} <br>
                Address: ${address.city}, ${address.country}
            `;
            
            document.getElementById("dataTypesResult").innerHTML = output;
        }
        
        // Example 2: Functions
        function calculateSquare() {
            let num = document.getElementById("numberInput").value;
            let result = num * num;
            document.getElementById("functionResult").innerHTML = 
                `The square of ${num} is ${result}`;
        }
        
        // Example 3: Conditional Statements
        function checkAge() {
            let age = document.getElementById("ageInput").value;
            let message;
            
            if (age >= 18) {
                message = "You are an adult";
            } else if (age >= 13) {
                message = "You are a teenager";
            } else if (age >= 0) {
                message = "You are a child";
            } else {
                message = "Please enter a valid age";
            }
            
            document.getElementById("conditionalResult").innerHTML = message;
        }
        
        // Example 4: Loops
        function runLoop() {
            let num = document.getElementById("loopInput").value;
            let output = "";
            
            for (let i = 1; i <= num; i++) {
                output += `Iteration ${i}<br>`;
            }
            
            document.getElementById("loopResult").innerHTML = output;
        }
        
        // Example 5: DOM Manipulation
        function changeText() {
            document.getElementById("domResult").innerHTML = 
                "Text changed with JavaScript!";
        }
        
        function changeColor() {
            const colors = ["#ff6b6b", "#4ecdc4", "#45b7d1", "#ffbe0b", "#ff006e"];
            const randomColor = colors[Math.floor(Math.random() * colors.length)];
            document.getElementById("domResult").style.color = randomColor;
        }
        
        // Example 6: Event Handling
        document.getElementById("eventButton").addEventListener("click", function() {
            const events = [
                "Button clicked!",
                "You triggered a JavaScript event!",
                "Event handling in action!",
                "Well done! You clicked the button.",
                "JavaScript is responding to your click."
            ];
            
            const randomEvent = events[Math.floor(Math.random() * events.length)];
            document.getElementById("eventResult").innerHTML = randomEvent;
            
            // Change button color temporarily
            this.style.background = "#4ecdc4";
            setTimeout(() => {
                this.style.background = "#2575fc";
            }, 300);
        });
        
        // Initialize some examples on page load
        window.onload = function() {
            showDataTypes();
        };
    </script>
</body>
