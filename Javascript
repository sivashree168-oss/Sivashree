    <div class="container">
        <header>
            <h1>JavaScript Examples</h1>
            <p class="subtitle">Explore these interactive examples to learn fundamental JavaScript concepts</p>
        </header>
        
        <div class="examples-grid">
            <!-- Example 1: Variables and Data Types -->
            <div class="example-card">
                <div class="card-header">Variables & Data Types</div>
                <div class="card-body">
                    <p class="card-description">JavaScript variables can hold different data types: numbers, strings, booleans, arrays, and objects.</p>
                    <div class="code-container">
                        let name = "John";<br>
                        let age = 30;<br>
                        let isStudent = false;<br>
                        let hobbies = ["reading", "gaming", "coding"];<br>
                        let address = { city: "New York", country: "USA" };
                    </div>
                    <button class="btn" onclick="showDataTypes()">Run Example</button>
                    <div class="result" id="dataTypesResult"></div>
                </div>
            </div>
            
            <!-- Example 2: Functions -->
            <div class="example-card">
                <div class="card-header">Functions</div>
                <div class="card-body">
                    <p class="card-description">Functions are blocks of code designed to perform a particular task.</p>
                    <div class="input-group">
                        <label>Enter a number:</label>
                        <input type="number" id="numberInput" value="5">
                    </div>
                    <div class="code-container">
                        function calculateSquare(num) {<br>
                        &nbsp;&nbsp;return num * num;<br>
                        }
                    </div>
                    <button class="btn" onclick="calculateSquare()">Calculate Square</button>
                    <div class="result" id="functionResult"></div>
                </div>
            </div>
            
            <!-- Example 3: Conditional Statements -->
            <div class="example-card">
                <div class="card-header">Conditional Statements</div>
                <div class="card-body">
                    <p class="card-description">Conditional statements are used to perform different actions based on different conditions.</p>
                    <div class="input-group">
                        <label>Enter your age:</label>
                        <input type="number" id="ageInput" value="20">
                    </div>
                    <div class="code-container">
                        if (age >= 18) {<br>
                        &nbsp;&nbsp;return "You are an adult";<br>
                        } else {<br>
                        &nbsp;&nbsp;return "You are a minor";<br>
                        }
                    </div>
                    <button class="btn" onclick="checkAge()">Check Age</button>
                    <div class="result" id="conditionalResult"></div>
                </div>
            </div>
            
            <!-- Example 4: Loops -->
            <div class="example-card">
                <div class="card-header">Loops</div>
                <div class="card-body">
                    <p class="card-description">Loops can execute a block of code a number of times.</p>
                    <div class="input-group">
                        <label>Enter a number:</label>
                        <input type="number" id="loopInput" value="5">
                    </div>
                    <div class="code-container">
                        for (let i = 1; i <= num; i++) {<br>
                        &nbsp;&nbsp;result += `Iteration ${i}<br>`;<br>
                        }
                    </div>
                    <button class="btn" onclick="runLoop()">Run Loop</button>
                    <div class="result" id="loopResult"></div>
                </div>
            </div>
            
            <!-- Example 5: DOM Manipulation -->
            <div class="example-card">
                <div class="card-header">DOM Manipulation</div>
                <div class="card-body">
                    <p class="card-description">JavaScript can change all the HTML elements and attributes in the page.</p>
                    <div class="code-container">
                        document.getElementById("demo").innerHTML =<br>
                        &nbsp;&nbsp;"Hello World!";
                    </div>
                    <button class="btn" onclick="changeText()">Change Text</button>
                    <button class="btn" onclick="changeColor()">Change Color</button>
                    <div class="result" id="domResult">This text will change</div>
                </div>
            </div>
            
            <!-- Example 6: Event Handling -->
            <div class="example-card">
                <div class="card-header">Event Handling</div>
                <div class="card-body">
                    <p class="card-description">JavaScript can be executed when an event occurs, like when the user clicks on an HTML element.</p>
                    <div class="code-container">
                        element.addEventListener("click", function() {<br>
                        &nbsp;&nbsp;// Code to execute on click<br>
                        });
                    </div>
                    <button class="btn" id="eventButton">Click Me</button>
                    <div class="result" id="eventResult">Event results will appear here</div>
                </div>
            </div>
        </div>
        
        <footer>
